docker() {
  local BIN=$(which docker)

  case "$1" in
    bash)
      $BIN exec -it "$2" bash
    ;;
    daemonize)
      $BIN run -d -P "${@:2}"
    ;;
    flatten)
      $BIN export $($BIN run -d "$2" /bin/bash) | $BIN import - "$3"
    ;;
    interact)
      $BIN run -i -t -P "${@:2}"
    ;;
    ip)
      $BIN inspect -f '{{.NetworkSettings.IPAddress}}' "$2"
    ;;
    mac)
      $BIN inspect -f '{{.NetworkSettings.MacAddress}}' "$2"
    ;;
    ports)
      $BIN inspect -f '{{range $p, $conf := .NetworkSettings.Ports}} {{$p}} -> {{(index $conf 0).HostPort}} {{end}}' "$2"
    ;;
    rmall)
      ps=$($BIN ps -a -q)

      if [ -n "$ps" ]; then
        docker stopall && $BIN rm "${@:2}" $ps
      fi
    ;;
    rmstopped)
      ps=$($BIN ps -a -q -f 'status=exited')

      if [ -n "$ps" ]; then
        $BIN rm "${@:2}" $ps
      fi
    ;;
    rmiall)
      images=$($BIN images -q)

      if [ -n "$images" ]; then
        docker stopall && docker rmall && $BIN rmi "${@:2}" $images
      fi
    ;;
    rmidangling)
      images=$($BIN images -q -f 'dangling=true')

      if [ -n "$images" ]; then
        $BIN rmi "${@:2}" $images
      fi
    ;;
    statsall)
      $BIN stats "${@:2}" $($BIN ps -q)
    ;;
    stopall)
      ps=$($BIN ps -a -q)

      if [ -n "$ps" ]; then
        $BIN stop "${@:2}" $ps
      fi
    ;;
    volumes)
      $BIN inspect -f '{{$conf := .Mounts}} {{(index $conf 0).Destination}} -> {{(index $conf 0).Source}}' "$2"
    ;;
    *)
      $BIN "${@:1}"
    ;;
  esac
}
